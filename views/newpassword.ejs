    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
   

      <form action="validate-password" method="POST">
       
        
        <div class="form-group">
          <label for="newPassword">Password</label>
          <input
